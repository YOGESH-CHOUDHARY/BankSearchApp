<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/bank_label"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Bank Name"/>

    <TextView
        android:id="@+id/bank_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/bank_label"
        android:layout_marginLeft="10dp"
        android:text=""/>

    <TextView
        android:id="@+id/branch_label"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/bank_name"
        android:text="Branch"/>

    <TextView
        android:id="@+id/branch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/branch_label"
        android:text=""
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/bank_name"/>

    <TextView
        android:id="@+id/ifsc_label"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/branch_label"
        android:text="IFSC"/>


    <TextView
        android:id="@+id/ifsc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_toRightOf="@+id/ifsc_label"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/branch"/>

</RelativeLayout>
</androidx.cardview.widget.CardView>