<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/image_2"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Pai International Malleswaram"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/img"/>

    <TextView
        android:id="@+id/time_and_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:30 @ 30th Dec,2019"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/img"
        android:layout_below="@+id/name"/>

    <TextView
        android:id="@+id/best_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Best price"
        android:layout_marginTop="10dp"
        android:textColor="#9b1c31"
        android:layout_toRightOf="@+id/name"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs.18999"
        android:layout_marginTop="5dp"
        android:background="#9b1c31"
        android:padding="5dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_below="@+id/best_price"
        android:layout_toRightOf="@+id/name"/>



</RelativeLayout>
</androidx.cardview.widget.CardView>
